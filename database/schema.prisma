// This is your Prisma schema file

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  products  Product[]
}

model Product {
  id                 Int      @id @default(autoincrement())
  userId             Int
  user               User     @relation(fields: [userId], references: [id])
  name               String
  brand              String
  expiryDate         DateTime // Printed Expiry Date
  openingDate        DateTime? // Date user opened the product
  paoMonths          Int?      // Months (e.g., 6, 12)
  finalExpiryDate    DateTime  // Computed: Min(expiryDate, openingDate + paoMonths)
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([finalExpiryDate])
  @@index([userId])
}